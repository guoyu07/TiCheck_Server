	public function actionIndex()
	{
		$this->prepareUser();
		if (!isset($_POST['User']))
			new Error(4, 'User');
		$user = json_decode($_POST['User']);
		//echo var_dump($user);

		$tiUser = TiUser::model()->findByAttributes(
			array('Email'=>$user->Email,
			'Password'=>$user->Password) 
		);

		if ($tiUser)
		{
			new Error(1);
		}
		new Error(6);
	}

	// Uncomment the following methods and override them if needed
